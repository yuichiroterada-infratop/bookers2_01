<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Togle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item"><%= link_to "Home", root_path %></li>
            <li class="nav-item"><%= link_to "Users", root_path %></li>
            <li class="nav-item"><%= link_to "Books", root_path %></li>
            <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li class="nav-item"><%= link_to "Home", root_path %></li>
            <li class="nav-item"><%= link_to "About", root_path %></li>
            <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path %></li>
            <li class="nav-item"><%= link_to "Log in", new_user_session_path %></li>
            <% end %>
          </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
