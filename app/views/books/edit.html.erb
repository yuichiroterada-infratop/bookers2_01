<!--books/:id/editの画面-->
<div class="container">
  <div class="row"><%= render "layouts/errors", obj: @book %></div>
  <div class="row">
    <div class="col-lg-12">
    <h1>Editing Book</h1>
    <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %></br>
    <span><%= f.submit "Update Book" %></span>
    <% end %>

    <div>
      <%= link_to "Show", book_path %> |
      <%= link_to "Back", books_path %>
    </div>
    </div>
  </div>

</div>