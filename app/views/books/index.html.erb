<!--/books画面-->
<h1>this is books/index view</h1>
<div class="container">
  <div class="row"><%= render "layouts/errors", obj: @book %></div>
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @user, book: @book %>
      <%= render "newbook", user: @user, book: @book %>
    </div>

    <div class="col-md-9">
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>投稿ユーザーの写真</td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>